<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#FFF">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tittle"
            android:id="@+id/textView" android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"/>
    <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:text="@string/firstName"
            android:id="@+id/textView2"
            android:textColor="#000000"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:textSize="15sp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/fname"
            android:hint="@string/firstName"
            android:textColor="#000000"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>
    <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:text="@string/lastName"
            android:textColor="#000000"
            android:id="@+id/t2_viewmsg_from"
            android:layout_below="@+id/textView2"
            android:layout_toLeftOf="@+id/textView"
            android:textSize="15sp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:id="@+id/lname"
            android:hint="@string/lastName"
            android:layout_alignTop="@+id/t2_viewmsg_from"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>
    <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="@string/email"
            android:id="@+id/t2_viewmsg_status"
            android:layout_below="@+id/t2_viewmsg_from"
            android:layout_alignRight="@+id/t2_viewmsg_from"
            android:textSize="15sp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:hint="@string/email"
            android:layout_below="@+id/lname"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>
    <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="@string/userName"
            android:id="@+id/textView5"
            android:layout_below="@+id/t2_viewmsg_status"
            android:layout_alignRight="@+id/t2_viewmsg_status"
            android:textSize="15sp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:id="@+id/uname"
            android:hint="@string/userName"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pword"
            android:hint="@string/pass"
            android:layout_alignLeft="@+id/uname"
            android:layout_below="@+id/textView5"
            android:textSize="15sp"/>
    <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="@string/pass"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/pword"
            android:layout_alignRight="@+id/textView5"
            android:textSize="15sp"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="@string/btnRegister"
            android:id="@+id/register"
            android:layout_below="@+id/textView6"
            android:layout_alignRight="@+id/textView2"
            android:textSize="13sp"/>
    <Button
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="@string/btnBack"
            android:id="@+id/bktologin"
            android:layout_below="@+id/pword"
            android:layout_alignParentRight="true"
            android:textSize="13sp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:textColor="#000000"
            android:id="@+id/register_error"
            android:layout_below="@+id/register"
            android:layout_alignParentRight="true"/>
</RelativeLayout>