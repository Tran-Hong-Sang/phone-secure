<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/t2_conversation_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/t2_bubble_yellow"
         >

        <TextView
            android:id="@+id/t2_conversation_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="2dip"
            android:text="Demo Content"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:id="@+id/t2_conversation_time"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t2_conversation_comment"            
            android:text="Small Text"
            android:textSize="10sp"
			android:textStyle="italic"
             />
        
    </RelativeLayout>

</LinearLayout>